<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_color_white_radius_5"
    android:translationY="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_live_tip2"
        android:textColor="@color/textColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <com.wanyue.common.custom.DrawableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_live_tip3"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/btn_share_wechat"
        app:dt_top_drawable="@mipmap/icon_share_wchat"
        app:dt_top_width="40dp"
        app:dt_top_height="40dp"
        android:drawablePadding="5dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_pill"
        android:enabled="false"
        android:alpha="0.5"
        />

    <com.wanyue.common.custom.DrawableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_live_tip4"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_share_wechat"
        android:layout_marginBottom="50dp"
        android:id="@+id/btn_pill"
        app:dt_top_drawable="@mipmap/icon_q_code"
        app:dt_top_width="40dp"
        app:dt_top_height="40dp"
        android:drawablePadding="5dp"
        android:enabled="false"
        android:alpha="0.5"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
