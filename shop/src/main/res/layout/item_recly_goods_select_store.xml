<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_color_white_radius_5"
    android:padding="@dimen/default_padding">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:id="@+id/img_store_avator"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@color/cardview_dark_background"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="万岳官方旗舰店"
        app:layout_constraintLeft_toRightOf="@id/img_store_avator"
        app:layout_constraintTop_toTopOf="@id/img_store_avator"
        app:layout_constraintBottom_toTopOf="@id/tv_fans"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/textColor"
        android:id="@+id/tv_store_name"
        android:layout_marginLeft="@dimen/default_margin"
        />

    <TextView
        android:text="@string/str_ziying"
        android:id="@+id/tv_store_self"
        app:layout_constraintTop_toTopOf="@id/tv_store_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_store_name"
        app:layout_constraintLeft_toRightOf="@id/tv_store_name"
        style="@style/self_store_tag"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-08-21"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/gray1"
        android:id="@+id/tv_fans"
        app:layout_constraintLeft_toLeftOf="@id/tv_store_name"
        app:layout_constraintBottom_toBottomOf="@id/img_store_avator"
        app:layout_constraintTop_toBottomOf="@id/tv_store_name"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_thumb1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@id/tv_store_name"
        app:layout_constraintTop_toBottomOf="@id/tv_fans"
        app:layout_constraintRight_toLeftOf="@id/img_thumb2"
        android:layout_marginTop="10dp"
        app:riv_corner_radius="5dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_thumb2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/img_thumb1"
        app:layout_constraintLeft_toRightOf="@id/img_thumb1"
        app:layout_constraintRight_toLeftOf="@id/img_thumb3"
        app:riv_corner_radius="5dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_thumb3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/img_thumb1"
        app:layout_constraintLeft_toRightOf="@id/img_thumb2"
        app:layout_constraintRight_toLeftOf="@id/img_thumb4"
        app:riv_corner_radius="5dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_thumb4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/img_thumb1"
        app:layout_constraintLeft_toRightOf="@id/img_thumb3"
        app:layout_constraintRight_toRightOf="parent"
        app:riv_corner_radius="5dp" />




</androidx.constraintlayout.widget.ConstraintLayout>
