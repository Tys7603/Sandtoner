<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="12dp"

    android:background="@drawable/bg_color_white_radius_5"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="173dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="5dp"
        app:riv_corner_radius_top_right="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_goods_cover"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Canon/佳能  PowerShot G7X 王者归来  正品行货全国联保,Canon/佳能  PowerShot G7X 王者归来  正品行货全国联保"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_15"
        android:id="@+id/tv_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:minHeight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_goods_cover"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="¥ 6899.00"
        android:textColor="#ffff4343"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="@dimen/default_margin"
        android:id="@+id/tv_price"
        android:layout_marginRight="9dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已售88件"
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/gray1"
        android:id="@+id/tv_sale"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>