<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".store.view.activity.StoreActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_content_container"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/btn_1"
            android:gravity="center_horizontal"
            >
            <com.wanyue.common.custom.CheckImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:select_image="@drawable/icon_store_home"
                app:deault_image="@drawable/icon_store_store_defatult"
                app:enable_click="false"
                android:id="@+id/img_1"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_10"
                android:text="@string/str_homepage"
                android:id="@+id/tv_1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/btn_2"

            android:gravity="center_horizontal"
            >
            <com.wanyue.common.custom.CheckImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:select_image="@drawable/icon_store_fenlei_select"
                app:deault_image="@drawable/icon_store_fenlei_default"
                app:enable_click="false"
                android:id="@+id/img_2"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_10"
                android:text="@string/str_fenlei"
                android:id="@+id/tv_2"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/btn_3"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_store_curstom_service"
                app:enable_click="false"
                android:id="@+id/img_3"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_10"
                android:text="@string/str_kefu"
                android:id="@+id/tv_3"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
