<?xml version="1.0" encoding="utf-8"?>
<com.wanyue.common.custom.ShadowContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:containerCornerRadius="5dp"
    app:containerDeltaLength="5dp"
    app:containerShadowColor="#10000000"
    app:containerShadowRadius="5dp"
    android:id="@+id/vp_order_container"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color_white_radius_5"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/my_spread"
            android:gravity="center_vertical"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_tip"
            android:layout_marginTop="10dp"
            />
        <com.wanyue.common.custom.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/check_detail"
            android:textColor="@color/gray3"
            android:gravity="right|center_vertical"
            android:minWidth="100dp"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_tip"
            app:dt_right_drawable="@mipmap/icon_arrow_right"
            app:dt_right_height="10dp"
            app:dt_right_width="10dp"
            android:drawablePadding="5dp"
            android:id="@+id/btn_check_deail"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3880.00"
            android:textSize="@dimen/text_size_15"
            android:textColor="#FFFF3535"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_current_money"
            app:layout_constraintRight_toLeftOf="@id/tv_yesterday_money"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="@dimen/default_padding"
            android:textStyle="bold"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.00"
            android:textSize="@dimen/text_size_15"
            android:textColor="#FFFF3535"
            android:id="@+id/tv_yesterday_money"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_current_money"
            app:layout_constraintLeft_toRightOf="@id/tv_current_money"
            app:layout_constraintRight_toLeftOf="@id/tv_spread_person_num"
            android:paddingBottom="@dimen/default_padding"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="222人"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/textColor"
            android:id="@+id/tv_spread_person_num"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_current_money"
            app:layout_constraintLeft_toRightOf="@id/tv_yesterday_money"
            app:layout_constraintRight_toLeftOf="@id/tv_spread_num"
            android:paddingBottom="@dimen/default_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="588单"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/textColor"
            android:id="@+id/tv_spread_num"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_current_money"
            app:layout_constraintLeft_toRightOf="@id/tv_spread_person_num"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:paddingBottom="@dimen/default_padding"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_yongjin"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/textColor"
            android:id="@+id/tv_current_money_tip"
            app:layout_constraintTop_toBottomOf="@id/tv_current_money"
            app:layout_constraintLeft_toLeftOf="@id/tv_current_money"
            app:layout_constraintRight_toRightOf="@id/tv_current_money"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tuiguang_1"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/textColor"
            android:id="@+id/tv_yesterday_money_tip"
            app:layout_constraintTop_toTopOf="@id/tv_current_money_tip"
            app:layout_constraintLeft_toLeftOf="@id/tv_yesterday_money"
            app:layout_constraintRight_toRightOf="@id/tv_yesterday_money"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tuiguang_2"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/textColor"
            android:id="@+id/tv_spread_person_num_tip"
            app:layout_constraintTop_toTopOf="@id/tv_current_money_tip"
            app:layout_constraintLeft_toLeftOf="@id/tv_spread_person_num"
            app:layout_constraintRight_toRightOf="@id/tv_spread_person_num"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tuiguang_3"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/textColor"
            android:id="@+id/tv_spread_num_tip"
            app:layout_constraintTop_toTopOf="@id/tv_current_money_tip"
            app:layout_constraintLeft_toLeftOf="@id/tv_spread_num"
            app:layout_constraintRight_toRightOf="@id/tv_spread_num"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.wanyue.common.custom.ShadowContainer>
